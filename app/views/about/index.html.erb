<body>

<!-- PRELOADER -->
<div class="preloader">
    <div class="inner">
        <div class="item item1"></div>
        <div class="item item2"></div>
        <div class="item item3"></div>
    </div>
</div>
<!-- END / PRELOADER -->

<!-- PAGE WRAP -->
<div id="page-wrap">
    
    <!-- HEADER -->
        <%= render "home/header" %>
    <!-- END / HEADER -->

    <!-- ABOUT STORY -->
    <section id="about-story" class="about-story section">
        <div class="divider divider-2"></div>
        <div class="container">
            <div class="block-first">
                <div class="row">
                    <div class="col-md-4">
                        <div class="image-wrap">
                            <img src="/frontend/images/about/pho-01.jpg" alt="">
                        </div>
                    </div>

                    <div class="col-md-7 col-md-offset-1">
                        <h4 class="lg text-uppercase">HEALTHY FOOD IS FUTURE</h4>
                        <h6 class="text-uppercase">Rind-Reisnudelsuppe (Vietnam's Nationalgericht)</h6>
                        <h6 class="text-uppercase">Phở Bò / Main dish with Rice noodles soups !!!</h6>
                        <p class="text-justify"><%= t(:about_content_1) %></p>
                        <p class="style-line"><%= t(:about_content_2) %></p>
                    </div>
                </div>
            </div>

            <div class="block-last">
                <div class="row">
                    <div class="col-md-4 col-md-push-8">
                        <div class="row">
                            <div class="col-xs-6 col-sm-3 col-md-6">
                                <div class="image-wrap">
                                    <img src="/frontend/images/temp/about-01.jpg" alt="">
                                </div>
                            </div>

                            <div class="col-xs-6 col-sm-3 col-md-6">
                                <div class="image-wrap">
                                    <img src="/frontend/images/temp/about-02.jpg" alt="">
                                </div>
                            </div>

                            <div class="col-xs-6 col-sm-3 col-md-6">
                                <div class="image-wrap">
                                    <img src="/frontend/images/temp/about-03.jpg" alt="">
                                </div>
                            </div>

                            <div class="col-xs-6 col-sm-3 col-md-6">
                                <div class="image-wrap">
                                    <img src="/frontend/images/temp/about-04.jpg" alt="">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-7 col-md-pull-4">
                        <h4 class="lg text-uppercase"><%= t(:about_content_3) %></h4>
                        <%= link_to t(:see_menu), {controller: "menu", action: "index"}, {class: "awe-btn awe-btn-2 awe-btn-default text-uppercase"} %>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ABOUT STORY -->

    <!-- FOOTER -->
        <footer id="footer" class="footer">
            <div class="awe-color"></div>
            <div class="container">
                <div class="copyright text-center">
                    <%= render "home/footer" %>
                </div>
            </div>
        </footer>
    <!-- END / FOOTER -->
    

</div>
<!-- END / PAGE WRAP -->


<!-- LOAD JQUERY -->
<%= javascript_include_tag '/frontend/js/lib/jquery-1.11.2.min.js' %>

<!-- GOOGLE MAP -->
<%= javascript_include_tag 'http://maps.google.com/maps/api/js?sensor=false' %>
<%= javascript_include_tag '/frontend/js/lib/bootstrap.min.js' %>
<%= javascript_include_tag '/frontend/js/lib/jquery.bxslider.min.js' %>
<%= javascript_include_tag '/frontend/js/lib/jquery.easing.min.js' %>
<%= javascript_include_tag '/frontend/js/lib/jquery.owl.carousel.min.js' %>
<%= javascript_include_tag '/frontend/js/lib/masonry.pkgd.min.js' %>
<%= javascript_include_tag '/frontend/js/lib/perfect-scrollbar.min.js' %>
<%= javascript_include_tag '/frontend/js/lib/jquery.magnific-popup.min.js' %>
<%= javascript_include_tag '/frontend/js/lib/jquery.parallax-1.1.3.js' %>
<%= javascript_include_tag '/frontend/js/lib/retina.min.js' %>
<%= javascript_include_tag '/frontend/js/scripts.js' %>

</body>