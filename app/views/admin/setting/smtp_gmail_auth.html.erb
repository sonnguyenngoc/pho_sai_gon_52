<!-- Main navbar -->
    <%= render "/admin/main/navbar" %>
<!-- /main navbar -->


<!-- Page container -->
<div class="page-container">

    <!-- Page content -->
    <div class="page-content">

        <!-- Main sidebar -->
        <div class="sidebar sidebar-main">
            <div class="sidebar-content">

                <!-- User menu -->
                    <%= render '/admin/main/user_menu' %>
                <!-- /user menu -->


                <!-- Main navigation -->
                <div class="sidebar-category sidebar-category-visible">
                    <div class="category-content no-padding">
                        <ul class="navigation navigation-main navigation-accordion">

                            <!-- Main menu-->
                                <%= render "/admin/main/main_menu" %>
                            <!-- /main menu -->

                        </ul>
                    </div>
                </div>
                <!-- /main navigation -->

            </div>
        </div>
        <!-- /main sidebar -->


        <!-- Main content -->
        <div class="content-wrapper">

            <!-- Page header -->
            <div class="page-header">
                <div class="page-header-content">
                    <div class="page-title">
                        <h4><i class="icon-arrow-left52 position-left"></i> <span class="text-semibold">Home</span> - Dashboard</h4>
                    </div>
                </div>

                <div class="breadcrumb-line">
                    <ul class="breadcrumb">
                        <li><%= link_to "<i class='icon-home2 position-left'></i> Home".html_safe, {controller: "main", action: "index"} %></li>
                        <li><%= link_to "Setting", admin_smtp_gmail_auth_path %></li>
                        <li class="active">SMTP - Gmail</li>
                    </ul>
                </div>
            </div>
            <!-- /page header -->
            
            
            
            <!-- Content area -->
            <div class="content">
              
              <% if flash[:notice].present? %>
                <div class="alert alert-success alert-bordered">
                    <button data-dismiss="alert" class="close" type="button"><span>Ã—</span><span class="sr-only">Close</span></button>
                    <%= flash[:notice] %>
                </div>
              <% end %>
              
                <!-- Horizontal form options -->
              <%= form_for "" do |f| %>
                <div class="row">
                    <div class="col-md-12">
                        <!-- Basic layout-->
                        <div class="panel panel-flat">
                            <div class="panel-heading">
                                <h5 class="panel-title">Gmail SMTP username/password</h5>                                
                            </div>
                            
                            <div class="panel-body">
                              
                                <div class="row">
                                  <div class="col-md-6">
                                    <div class="form-group">
                                      <label>Username/Email</label>
                                      <div class="">
                                        <input class="form-control required" name="email" value="<%= ENV["GMAIL_USERNAME"] %>" />
                                      </div>
                                    </div>
                                  </div>
                                  <div class="col-md-6">
                                    <div class="form-group">
                                      <label>Password</label>
                                      <div class="">
                                        <input class="form-control required" name="password" value="<%= ENV["GMAIL_PASSWORD"] %>" />
                                      </div>
                                    </div>
                                  </div>
                                </div>
                              
                            </div>
            
                        </div>
                        <!-- /basic layout -->
                    </div>
                </div>
                <!-- /horizontal form options -->
                
                <div class="text-right">
                    <%= button_tag 'Save <i class="icon-plus22 position-right"></i>'.html_safe, class: "btn btn-primary"%>
                </div>
                
              <% end %>

                <!-- Footer -->
                <div class="footer text-muted">
                    <%= render "/admin/main/footer" %>
                </div>
                <!-- /footer -->
                
            </div>
            <!-- /content area -->

        </div>
        <!-- /main content -->

    </div>
    <!-- /page content -->

</div>
<!-- /page container -->

<!-- Theme JS files -->
<%= javascript_include_tag '/backend/assets/js/plugins/forms/selects/select2.min.js' %>
<%= javascript_include_tag '/backend/assets/js/plugins/forms/styling/uniform.min.js' %>
<%= javascript_include_tag '/backend/assets/js/core/app.js' %>

<%= javascript_include_tag '/backend/assets/js/pages/form_layouts.js' %>
<!-- /theme JS files -->