<body>

<!-- PRELOADER -->
<div class="preloader">
    <div class="inner">
        <div class="item item1"></div>
        <div class="item item2"></div>
        <div class="item item3"></div>
    </div>
</div>
<!-- END / PRELOADER -->

<!-- PAGE WRAP -->
<div id="page-wrap">
    
    <!-- HEADER -->
        <%= render "home/header" %>
    <!-- END / HEADER -->

    <!-- SHOP PAGE -->
    <section id="shop-page" class="shop-page section">
        <div class="container">
            <div class="row">
                <div class="checkout">
                    <% if @order.line_items.count > 0 %>
                        <!-- YOUR ORDER -->
                        <div class="col-md-3">
                            <div class="your-order">
                                
                                <h4 class="xmd text-capitalize">Your order</h4>
                                <ul class="list-product">
                                    <% @order.line_items.each do |item| %>
                                        <li>
                                            <div class="product-image">
                                                <img src="<%= item.menu.image_url.image_product_xsmall if item.menu.image_url? %>" alt="">
                                            </div>
                                            <div class="product-name">
                                                <a href="#"><%= item.menu.name_1 %></a>
                                            </div>
                                            <hr/>
                                            <div class="qty-wrap">
                                                <span class="amount">Mount: <strong><%= item.total_item %></strong>/<%= item.quantity %> items</span>
                                            </div>
                                            <div class="product-remove">
                                                <%= link_to "<i class='icon awe_close'></i>".html_safe , {controller: "cart", action: "index", do: 'remove_item', line_item_id: item.id } %>
                                            </div>
                                        </li>
                                    <% end %>
                                </ul>
                                <ul class="list-price">
                                    <li class="total">
                                        Total
                                        <span class="amount pull-right"><%= @order.total_order %></span>
                                    </li>
                                </ul>
                                <div class="payment">
                                    Payment
                                    <span class="amount pull-right"><%= @order.total_order %></span>
                                </div>
                            </div>
                        </div>
                        <!-- END / YOUR ORDER -->
    
    
                        <!-- CHECKOUT CONTENT -->
                        <div class="col-md-9">
                            <div class="checkout-content">
                                
                                <h4 class="xmd text-capitalize">Your Info</h4>
                                <%= form_for @customer_order do |f| %>
                                    <div class="row">
                                        <div class="col-md-3">
                                            <label for="billing_first_name">
                                                First Name <abbr class="required">*</abbr>
                                            </label>
                                            <%= f.text_field :first_name, required: true %>
                                        </div>
                                        <div class="col-md-3">
                                            <label for="billing_last_name">
                                                Last Name <abbr class="required">*</abbr>
                                            </label>
                                            <%= f.text_field :last_name, required: true %>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="billing_company">
                                                Company Name
                                            </label>
                                            <%= f.text_field :company_name %>
                                        </div>
                                    </div>
                                    
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label for="billing_email">
                                                Email Address <abbr class="required">*</abbr>
                                            </label>
                                            <%= f.text_field :email, required: true %>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="billing_phone">
                                                Phone <abbr class="required">*</abbr>
                                            </label>
                                            <%= f.text_field :phone, required: true %>
                                        </div>
                                    </div>
        
                                    <h4 class="xmd text-capitalize">Delivery Info</h4>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <label for="billing_address_1" class="">
                                                Address <abbr class="required">*</abbr>
                                            </label>
                                            <%= f.text_field :address, required: true %>
                                        </div>
                                    </div>
                                    <%= f.submit "confirm order", class: "awe-btn awe-btn-3 awe-btn-default text-uppercase" %>
                                <% end %>
                            </div>
                        </div>
                        <!-- END / CHECKOUT CONTENT -->
                    <% else %>
                        <div class="cart-submit text-center">
                            <div class="form-actions">
                                <h4>Your shopping cart is empty</h4>
                                <%= link_to "SHOPPING NOW", {controller: "menu", action: "index"}, {class: "awe-btn awe-btn-3 awe-btn-default text-uppercase"} %>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </section>
    <!-- END / SHOP PAGE -->


    <!-- FOOTER -->
        <footer id="footer" class="footer">
            <div class="divider divider-1 divider-color"></div>
            <div class="awe-color"></div>
            <div class="container">
                <div class="copyright text-center">
                    <%= render "home/footer" %>
                </div>
            </div>
        </footer>
    <!-- END / FOOTER -->
    

</div>
<!-- END / PAGE WRAP -->

<!-- LOAD JQUERY -->
<%= javascript_include_tag "/frontend/js/lib/jquery-1.11.2.min.js" %>

<!-- GOOGLE MAP -->
<%= javascript_include_tag "http://maps.google.com/maps/api/js?sensor=false" %>
<%= javascript_include_tag "/frontend/js/lib/bootstrap.min.js" %>
<%= javascript_include_tag "/frontend/js/lib/jquery.bxslider.min.js" %>
<%= javascript_include_tag "/frontend/js/lib/jquery.easing.min.js" %>
<%= javascript_include_tag "/frontend/js/lib/jquery.owl.carousel.min.js" %>
<%= javascript_include_tag "/frontend/js/lib/masonry.pkgd.min.js" %>
<%= javascript_include_tag "/frontend/js/lib/perfect-scrollbar.min.js" %>
<%= javascript_include_tag "/frontend/js/lib/jquery.magnific-popup.min.js" %>
<%= javascript_include_tag "/frontend/js/lib/jquery.parallax-1.1.3.js" %>
<%= javascript_include_tag "/frontend/js/lib/retina.min.js" %>
<%= javascript_include_tag "/frontend/js/scripts.js" %>

</body>