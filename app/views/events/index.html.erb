<body>

<!-- PRELOADER -->
<div class="preloader">
    <div class="inner">
        <div class="item item1"></div>
        <div class="item item2"></div>
        <div class="item item3"></div>
    </div>
</div>
<!-- END / PRELOADER -->

<!-- PAGE WRAP -->
<div id="page-wrap">
    
    <!-- HEADER -->
        <%= render "home/header" %>
    <!-- END / HEADER -->

    <!-- EVENTS -->
    <section id="events" class="events section">
        
        <div class="divider divider-2"></div>
        <div class="section-content">
            <div class="container">
                
                <h2 style="margin: 0;"><%= t(:events) %></h2>
                
                <div class="blog-list" style="margin-top: 0">
                        
                    <% Gallery.order("created_at DESC").each do |g| %>
                        <!-- POST -->
                        <div class="post post-single">
                            <div class="post-media">
                                <div class="image-wrap">
                                    <img alt="" src="<%= g.image_url.big_square if g.image_url? %>">
                                </div>
                            </div>
                            <div class="post-body">
                                
                                <div class="post-title">
                                    <h3 class="xmd"><a href="<%= show_event_path(g_id: g.id) %>"><%= g.title %></a></h3>
                                </div>
                                <div class="post-content">
                                    <p><%= g.description.html_safe if !g.description.empty? %></p>
                                </div>
                                <div class="post-footer">
                                    <div class="awe-btn awe-btn-2 awe-btn-default text-uppercase"><a class="" href="<%= show_event_path(g_id: g.id) %>"><%= t('read_more') %></a></div>
                                </div>
                            </div>
                        </div>
                        <!-- END / POST -->
                    <% end %>
                        
                    </div>
                
            </div>
        </div>
    </section>
    <!-- END / EVENTS -->

    <!-- EVENTS GALLERY -->
    <section id="events-gallery" class="events-gallery section">
        <div class="gallery-slider">
            <!-- GALLERY ITEM -->
            <div class="gallery-item">
                <img src="/frontend/images/temp/11.jpg" alt="">
            </div>
            <!-- END / GALLERY ITEM -->

            <!-- GALLERY ITEM -->
            <div class="gallery-item">
                <img src="/frontend/images/temp/1.jpg" alt="">
            </div>
            <!-- END / GALLERY ITEM -->

            <!-- GALLERY ITEM -->
            <div class="gallery-item">
                <img src="/frontend/images/temp/3.jpg" alt="">
            </div>
            <!-- END / GALLERY ITEM -->

            <!-- GALLERY ITEM -->
            <div class="gallery-item">
                <img src="/frontend/images/temp/4.jpg" alt="">
            </div>
            <!-- END / GALLERY ITEM -->

            <!-- GALLERY ITEM -->
            <div class="gallery-item">
                <img src="/frontend/images/temp/5.jpg" alt="">
            </div>
            <!-- END / GALLERY ITEM -->

            <!-- GALLERY ITEM -->
            <div class="gallery-item">
                <img src="/frontend/images/temp/10.jpg" alt="">
            </div>
            <!-- END / GALLERY ITEM -->

            
        </div>
    </section>
    <!-- END / EVENTS GALLERY -->


    <!-- FOOTER -->
    <footer id="footer" class="footer">
        <div class="divider divider-1 divider-color"></div>
        <div class="awe-color"></div>
        <div class="container">
            <div class="copyright text-center">
                <%= render "home/footer" %>
            </div>
        </div>
    </footer>
    <!-- END / FOOTER -->
    

</div>
<!-- END / PAGE WRAP -->

<!-- LOAD JQUERY -->
<%= javascript_include_tag '/frontend/js/lib/jquery-1.11.2.min.js' %>

<!-- GOOGLE MAP -->
<%= javascript_include_tag 'http://maps.google.com/maps/api/js?sensor=false' %>
<%= javascript_include_tag '/frontend/js/lib/bootstrap.min.js' %>
<%= javascript_include_tag '/frontend/js/lib/jquery.bxslider.min.js' %>
<%= javascript_include_tag '/frontend/js/lib/jquery.easing.min.js' %>
<%= javascript_include_tag '/frontend/js/lib/jquery.owl.carousel.min.js' %>
<%= javascript_include_tag '/frontend/js/lib/masonry.pkgd.min.js' %>
<%= javascript_include_tag '/frontend/js/lib/perfect-scrollbar.min.js' %>
<%= javascript_include_tag '/frontend/js/lib/jquery.magnific-popup.min.js' %>
<%= javascript_include_tag '/frontend/js/lib/jquery.parallax-1.1.3.js' %>
<%= javascript_include_tag '/frontend/js/lib/retina.min.js' %>
<%= javascript_include_tag '/frontend/js/scripts.js' %>

</body>
</html>