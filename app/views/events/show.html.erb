<body>

<!-- PRELOADER -->
<div class="preloader">
    <div class="inner">
        <div class="item item1"></div>
        <div class="item item2"></div>
        <div class="item item3"></div>
    </div>
</div>
<!-- END / PRELOADER -->

<!-- PAGE WRAP -->
<div id="page-wrap">
    
    <!-- HEADER -->
        <%= render "home/header" %>
    <!-- END / HEADER -->

    <!-- EVENTS -->
    <section id="events" class="events section">
        <div class="divider divider-2"></div>
        <div class="section-content">
            <div class="container">
                
                <h2 style="margin-top: 0; margin-bottom: 10px;">
                    <a href="<%= events_path %>" class="color-tale">Events</a> / <%= @gallery.title %></h2>
                <p><%= @gallery.description %></p>
                <br />
                <ul class="event-slider">
                        
                        <!-- ITEM EVENT -->
                        <li>
                            <div class="item-event">
                                <div class="row">
                                    <div class="col-sm-4">
                                        <div class="image-wrap">
                                            <img src="<%= @gallery.image_url.big_square if @gallery.image_url? %>" alt=""> 
                                        </div>
                                    </div>
                                    
                                </div>
                            </div>
                        </li>
                        <!-- ITEM EVENT -->
                    
                    <% @gallery.gallery_details.each do |g| %>
                        <!-- ITEM EVENT -->
                        <li>
                            <div class="item-event">
                                <div class="row">
                                    <div class="col-sm-4">
                                        <div class="image-wrap">
                                            <img src="<%= g.image_url.big_square if g.image_url? %>" alt=""> 
                                        </div>
                                    </div>
                                    
                                </div>
                            </div>
                        </li>
                        <!-- ITEM EVENT -->
                    <% end %>


                </ul>

                <!-- EVENT PAGER -->
                <div class="row">
                    <div class="col-lg-8 col-lg-offset-4">
                        <div class="event-pager-scroll">
                            <div class="event-pager">
                                <a data-slide-index="0" href="#"><img src="<%= @gallery.image_url.sub_gallery if @gallery.image_url? %>" alt=""></a>
                                <% @gallery.gallery_details.each_with_index do |g,i| %>
                                    <a data-slide-index="<%= i+1 %>" href="#"><img src="<%= g.image_url.sub_gallery if g.image_url? %>" alt=""></a>
                                <% end %>   
                            </div>
                        </div>
                    </div>
                </div>
                <style>
                    .event-pager-scroll {
                        margin-top: -360px !important;
                    }
                </style>
                <!-- END / EVENT PAGER -->
            </div>
        </div>
    </section>
    <!-- END / EVENTS -->

    <!-- EVENTS GALLERY -->
    <section id="events-gallery" class="events-gallery section">
        <div class="gallery-slider">
            
            <!-- GALLERY ITEM -->
            <div class="gallery-item">
                <img src="/frontend/images/temp/news-01.jpg" alt="">
            </div>
            <!-- END / GALLERY ITEM -->
            
            <!-- GALLERY ITEM -->
            <div class="gallery-item">
                <img src="/frontend/images/temp/news-02.jpg" alt="">
            </div>
            <!-- END / GALLERY ITEM -->
            
            <!-- GALLERY ITEM -->
            <div class="gallery-item">
                <img src="/frontend/images/temp/news-03.jpg" alt="">
            </div>
            <!-- END / GALLERY ITEM -->
            
            <!-- GALLERY ITEM -->
            <div class="gallery-item">
                <img src="/frontend/images/temp/news-04.jpg" alt="">
            </div>
            <!-- END / GALLERY ITEM -->

            <!-- GALLERY ITEM -->
            <div class="gallery-item">
                <img src="/frontend/images/temp/news-05.jpg" alt="">
            </div>
            <!-- END / GALLERY ITEM -->

            <!-- GALLERY ITEM -->
            <div class="gallery-item">
                <img src="/frontend/images/temp/news-06.jpg" alt="">
            </div>
            <!-- END / GALLERY ITEM -->

            
        </div>
    </section>
    <!-- END / EVENTS GALLERY -->


    <!-- FOOTER -->
    <footer id="footer" class="footer">
        <div class="divider divider-1 divider-color"></div>
        <div class="awe-color"></div>
        <div class="container">
            <div class="copyright text-center">
                <%= render "home/footer" %>
            </div>
        </div>
    </footer>
    <!-- END / FOOTER -->
    

</div>
<!-- END / PAGE WRAP -->

<!-- LOAD JQUERY -->
<%= javascript_include_tag '/frontend/js/lib/jquery-1.11.2.min.js' %>

<!-- GOOGLE MAP -->
<%= javascript_include_tag 'http://maps.google.com/maps/api/js?sensor=false' %>
<%= javascript_include_tag '/frontend/js/lib/bootstrap.min.js' %>
<%= javascript_include_tag '/frontend/js/lib/jquery.bxslider.min.js' %>
<%= javascript_include_tag '/frontend/js/lib/jquery.easing.min.js' %>
<%= javascript_include_tag '/frontend/js/lib/jquery.owl.carousel.min.js' %>
<%= javascript_include_tag '/frontend/js/lib/masonry.pkgd.min.js' %>
<%= javascript_include_tag '/frontend/js/lib/perfect-scrollbar.min.js' %>
<%= javascript_include_tag '/frontend/js/lib/jquery.magnific-popup.min.js' %>
<%= javascript_include_tag '/frontend/js/lib/jquery.parallax-1.1.3.js' %>
<%= javascript_include_tag '/frontend/js/lib/retina.min.js' %>
<%= javascript_include_tag '/frontend/js/scripts.js' %>

</body>
</html>