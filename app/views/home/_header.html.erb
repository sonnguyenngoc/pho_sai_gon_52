<header id="header" class="header header-2">
    <div class="container">
        <!-- LOGO -->
        <div class="logo"><%= link_to image_tag("/frontend/images/logo-PhoSG52.png"), {controller: "home", action: "index"} %></div>
        <!-- END / LOGO -->

        <!-- OPEN MENU MOBILE -->
        <div class="open-menu-mobile">
            <span>Toggle menu mobile</span>
        </div>
        <!-- END / OPEN MENU MOBILE -->

        <!-- NAVIGATION -->
        <nav class="navigation text-right" data-menu-type="1200">
            
            <!-- SOCIAL -->
            <div class="head-social text-right">
                    <!-- Go to www.addthis.com/dashboard to customize your tools -->
                    <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-56e389a44d3cfa43"></script>
                    <!-- Go to www.addthis.com/dashboard to customize your tools -->
                    <style>
                        .addthis_sharing_toolbox {
                            float: left;
                            margin-right: 20px;
                            margin-top: 3px;
                        }
                    </style>
                    <div class="addthis_sharing_toolbox"></div>

                |   <% params[:locale] = 'en' %><a href="<%= url_for( params ) %>">EN</a>/
                    <% params[:locale] = 'de' %><a href="<%= url_for( params ) %>">DE</a>
            </div>
            <!-- END / SOCIAL -->
            <br />
            
            <!-- NAV -->
            <ul class="nav text-uppercase font-menu-bold">
                <li><%= link_to t(:home), {controller: "home", action: "index"} %></li>
                <li><%= link_to t(:about), {controller: "about", action: "index"} %></li>
                <li><%= link_to t(:menu), {controller: "menu", action: "index"} %></li>
                <li><%= link_to t(:reservation), {controller: "reservation", action: "index"} %></li>
                <li><%= link_to t(:catering), {controller: "catering", action: "index"} %></li>
                <!--<li><%= link_to t(:news), {controller: "news", action: "index"} %></li>-->
                <li><%= link_to t(:events), {controller: "events", action: "index"} %></li>
                <li><%= link_to t(:contact), {controller: "contact", action: "index"} %></li>
            </ul>
            <!-- END / NAV -->

            <!-- MINICART -->
            <div class="minicart-wrap">
                <div class="toggle-minicart active">
                    <span class="text-uppercase"><%=t :cart %></span>
                </div>
                <div class="minicart-body">
                    <h4 class="xsm text-uppercase text-center"><%=t :your_cart %></h4>
                    <ul class="minicart-list">
                        <% @order.line_items.each do |item| %>
                            <input type="hidden" name="line_items[id]" value="<%= item.id %>">
                            <li>
                                <div class="product-thumb">
                                    <img src="<%= item.menu.image_url.image_product_xsmall if item.menu.image_url? %>" alt="">
                                </div>
                                <div class="product-name">
                                    <a href="#"><%= item.menu.name_1 %></a>
                                </div>
                                <div class="qty-wrap">
                                    <span class="amount">Mount: <strong><%= item.total_item %></strong>/<%= item.quantity %> items</span>
                                </div>
                                <div class="product-remove">
                                    <%= link_to "<i class='icon awe_close'></i>".html_safe , {controller: "cart", action: "index", do: 'remove_item', line_item_id: item.id } %>
                                </div>
                            </li>
                        <% end %>
                    </ul>
                    <div class="minicart-total">
                        Total
                        <span class="amount pull-right"><%= @order.total_order %></span>
                    </div>
                    <div class="minicart-footer">
                        <%= link_to t(:view_cart), {controller: "cart", action: "index"}, {class: "awe-btn awe-btn-2 awe-btn-default text-uppercase"} %>
                    </div>
                    <% if @order.line_items.count > 0 %>
                        <div class="minicart-footer">
                            <%= link_to "Check out", {controller: "checkout", action: "index"}, {class: "awe-btn awe-btn-1 awe-btn-default text-uppercase"} %>
                        </div>
                    <% end %>

                </div>
            </div>
            <!-- END / MINICART -->
            
            
        </nav>
        <!-- END / NAVIGATION -->
    </div>

</header>