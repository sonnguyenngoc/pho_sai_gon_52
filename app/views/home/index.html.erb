<body class="home">

<!-- PRELOADER -->
<div class="preloader">
    <div class="inner">
        <div class="item item1"></div>
        <div class="item item2"></div>
        <div class="item item3"></div>
    </div>
</div>
<!-- END / PRELOADER -->

<!-- PAGE WRAP -->
<div id="page-wrap">
    
    <!-- HEADER -->
        <%= render "header" %>
    <!-- END / HEADER -->

    <!-- HOME MEDIA -->
    <section id="home-media" class="home-media section">
        <div class="home-fixheight tb">
            <ul class="home-slider fix-margin-bottom" data-background="awe-static">
                <li>
                    <div class="image-wrap">
                        <img src="/frontend/images/temp/slideshow-01.jpg" alt="">
                    </div>
                    <div class="slider-content text-center">
                        <div class="home-content">
                            <div class="ribbon ribbon-1">
                                <h2 class="sm"><%=t :welcome_to %></h2>
                            </div>
                            <h1 class="sbig text-uppercase"><%= @info.name %></h1>
                            <div class="awe-hr">
                                <i class="icon awe_certificate"></i>
                            </div>
                            <p class="xmd"><%=t :mon_fri %>: <%= @info.hour_en %></p>
                            <p class="xmd"><%=t :sat %>: <%= @info.hour_de %>; <%=t :sun %>: <%=t :close %></p>
                            <p class="xmd"><%= @info.address %></p>
                            <p class="xmd"><%= @info.email %></p>
                            <p class="xmd"><%= @info.phone %></p>
                        </div>
                    </div>
                </li>

                <li>
                    <div class="image-wrap">
                        <img src="/frontend/images/temp/slideshow-02.jpg" alt="">
                    </div>
                    <div class="slider-content text-center">
                        <div class="home-content">
                            <div class="ribbon ribbon-1">
                                <h2 class="sm">WELCOME TO</h2>
                            </div>
                            <h1 class="sbig text-uppercase"><%= @info.name %></h1>
                            <div class="awe-hr">
                                <i class="icon awe_certificate"></i>
                            </div>
                            <p class="xmd"><%=t :mon_fri %>: <%= @info.hour_en %></p>
                            <p class="xmd"><%=t :sat %>: <%= @info.hour_de %>; <%=t :sun %>: <%=t :close %></p>
                            <p class="xmd"><%= @info.address %></p>
                            <p class="xmd"><%= @info.email %></p>
                            <p class="xmd"><%= @info.phone %></p>
                        </div>
                    </div>
                </li>

                <li>
                    <div class="image-wrap">
                        <img src="/frontend/images/temp/slideshow-03.jpg" alt="">
                    </div>
                    <div class="slider-content text-center">
                        <div class="home-content">
                            <div class="ribbon ribbon-1">
                                <h2 class="sm">WELCOME TO</h2>
                            </div>
                            <h1 class="sbig text-uppercase"><%= @info.name %></h1>
                            <div class="awe-hr">
                                <i class="icon awe_certificate"></i>
                            </div>
                            <p class="xmd"><%=t :mon_fri %>: <%= @info.hour_en %></p>
                            <p class="xmd"><%=t :sat %>: <%= @info.hour_de %>; <%=t :sun %>: <%=t :close %></p>
                            <p class="xmd"><%= @info.address %></p>
                            <p class="xmd"><%= @info.email %></p>
                            <p class="xmd"><%= @info.phone %></p>
                            <p class="xmd">Facebook: <%= link_to "Phở Sài Gòn 52", "https://www.facebook.com/Phosaigon52/?fref=ts", target: "_blank" %></p>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </section>
    <!-- END / HOME MEDIA -->

    <!-- FOOTER -->
        <footer id="footer" class="footer home_footer">
            <div class="container">
                <div class="copyright text-center">
                    <%= render "footer" %>
                </div>
            </div>
        </footer>
    <!-- END / FOOTER -->

</div>
<!-- END / PAGE WRAP -->

<!-- LOAD JQUERY -->
<%= javascript_include_tag '/frontend/js/lib/jquery-1.11.2.min.js' %>

<!-- GOOGLE MAP -->
<%= javascript_include_tag 'http://maps.google.com/maps/api/js?sensor=false' %>
<%= javascript_include_tag '/frontend/js/lib/bootstrap.min.js' %>
<%= javascript_include_tag '/frontend/js/lib/jquery.bxslider.min.js' %>
<%= javascript_include_tag '/frontend/js/lib/jquery.easing.min.js' %>
<%= javascript_include_tag '/frontend/js/lib/jquery.owl.carousel.min.js' %>
<%= javascript_include_tag '/frontend/frontend/js/lib/masonry.pkgd.min.js' %>
<%= javascript_include_tag '/frontend/js/lib/perfect-scrollbar.min.js' %>
<%= javascript_include_tag '/frontend/js/lib/jquery.magnific-popup.min.js' %>
<%= javascript_include_tag '/frontend/js/lib/jquery.parallax-1.1.3.js' %>
<%= javascript_include_tag '/frontend/js/lib/retina.min.js' %>
<%= javascript_include_tag '/frontend/js/scripts.js?v=1' %>

</body>