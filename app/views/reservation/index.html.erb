<body>

<!-- PRELOADER -->
<div class="preloader">
    <div class="inner">
        <div class="item item1"></div>
        <div class="item item2"></div>
        <div class="item item3"></div>
    </div>
</div>
<!-- END / PRELOADER -->

<!-- PAGE WRAP -->
<div id="page-wrap">
    
    <!-- HEADER -->
        <%= render "home/header" %>
    <!-- END / HEADER -->

    <!-- RESERVATION -->
    <section class="reservation section pd">
        <div class="divider divider-2"></div>
        <div class="reservation-content">
            <%= form_for @customer_reservation do |f| %>
                <div class="row">
                    <div class="col-md-6">
                        <table class="form-table table-first">
                            <tbody>
                                <tr class="t-date">
                                    <td colspan="2">
                                        <label for="date"><%=t :date_trans %></label>
                                        <div class="form-item">
                                            <%= f.text_field :order_time, value: @customer_reservation.order_time.strftime("%d/%m/%Y"), placeholder: 'dd/mm/yy' %>
                                            <i class="icon awe_calendar"></i>
                                        </div>
                                    </td>
                                </tr>
                                <tr class="t-time-pers">
                                    <td class="t-time">
                                        <label for="time"><%=t :time_trans %></label>
                                        <div class="form-item">
                                            <%= text_field_tag "time", (@customer_reservation.order_time.in_time_zone("Amsterdam") + 2.hours).strftime("%I:%M"), placeholder: "hh:mm" %>
                                            <i class="icon awe_clock_2"></i>
                                        </div>
                                    </td>
                                </tr>
                                <tr class="t-number">
                                    <td colspan="2">
                                        <label for="customer_number"><%=t :customer_number %></label>
                                        <div class="form-item">
                                            <%= f.text_field :customer_number, placeholder: t(:customer_number)+' (*)', required: true %>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
        
                    <div class="col-md-6">
                        <table class="form-table">
                            <tbody>
                                <tr class="t-name">
                                    <td>
                                        <label for="name"><%=t :customer_name %></label>
                                        <div class="form-item">
                                            <%= f.text_field :customer_name, placeholder: t(:customer_name)+' (*)', required: true %>
                                        </div>
                                    </td>
                                </tr>
                                <tr class="t-telephone">
                                    <td>
                                        <label for="telephone"><%=t :telephone %></label>
                                        <div class="form-item">
                                            <%= f.text_field :customer_phone, placeholder: t(:telephone)+' (*)', required: true %>
                                        </div>
                                    </td>
                                </tr>
                                <tr class="t-email">
                                    <td>
                                        <label for="email">Email</label>
                                        <div class="form-item">
                                            <%= f.text_field :customer_email, placeholder: 'Email (*)', required: true %>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <table class="form-table reservation-note">
                            <tbody>
                                <tr class="t-note">
                                    <td>
                                        <label for="note"><%=t :note %></label>
                                        <div class="form-item">
                                            <%= f.text_area :note, placeholder: t(:your_note) + ' (*)', required: true %>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="form-footer text-center">
                    <div class="form-item reservation-submit">
                        <%= f.submit t(:send_reservation), class: "awe-btn awe-btn-3 awe-btn-default text-uppercase" %>
                    </div>
                </div>
                <div id="reservation-form-content" class="text-center"></div>
            <% end %>
        </div>
    </section>
    <!-- END / RESERVATION -->

    <!-- FOOTER -->
    <footer id="footer" class="footer">
        <div class="awe-color"></div>
        <div class="container">
            <div class="copyright text-center">
                <%= render "home/footer" %>
            </div>
        </div>
    </footer>
    <!-- END / FOOTER -->
    

</div>
<!-- END / PAGE WRAP -->

<!-- LOAD JQUERY -->
<%= javascript_include_tag '/frontend/js/lib/jquery-1.11.2.min.js' %>

<!-- GOOGLE MAP -->
<%= javascript_include_tag 'http://maps.google.com/maps/api/js?sensor=false' %>
<%= javascript_include_tag '/frontend/js/lib/bootstrap.min.js' %>
<%= javascript_include_tag '/frontend/js/lib/jquery.bxslider.min.js' %>
<%= javascript_include_tag '/frontend/js/lib/jquery.easing.min.js' %>
<%= javascript_include_tag '/frontend/js/lib/jquery.owl.carousel.min.js' %>
<%= javascript_include_tag '/frontend/js/lib/masonry.pkgd.min.js' %>
<%= javascript_include_tag '/frontend/js/lib/perfect-scrollbar.min.js' %>
<%= javascript_include_tag '/frontend/js/lib/jquery.magnific-popup.min.js' %>
<%= javascript_include_tag '/frontend/js/lib/jquery.parallax-1.1.3.js' %>
<%= javascript_include_tag '/frontend/js/lib/retina.min.js' %>
<%= javascript_include_tag '/frontend/js/lib/jquery.form.min.js' %>
<%= javascript_include_tag '/frontend/js/lib/jquery.validate.min.js' %>
<%= javascript_include_tag '/frontend/js/scripts.js' %>

</body>