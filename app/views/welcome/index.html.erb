<body>
    
<link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">

<!-- PAGE WRAP -->
<div id="page-wrap">

    <!-- ABOUT STORY -->
    <section id="about-story" class="about-story section no-line">
        <div class="container">
            <div class="block-first">
                <div class="row">
                    <div class="col-md-12">
                        <div class="image-wrap text-center">
                            <img src="/frontend/images/logo-PhoSG52.png" />
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="block-first">
                <div class="row">
                    <div class="col-md-12 text-center hover-1">
                        <p><small>Choose your language</small></p>
                        <figure><%= link_to image_tag("/frontend/images/flags/icon-uk.png"), home_path(locale: "en") %>  <%= link_to image_tag("/frontend/images/flags/icon-german.png"), home_path(locale: "de") %></figure>
                        <h4 class="font-welcome">Take Away - Asia Buffet - Catering - Lieferung</h4>
                    </div>
                </div>
            </div>
            
            <% if @banners.count > 0 %>
                <div class="block-first">
                    <div class="row">
                        <div class="col-md-12 home-banner-box">
                            <ul class="bxslider">
                                
                                <% @banners.each do |banner| %>
                                    <li><img src="<%= banner.image_url.banner %>" title="
                                    <strong class='title'><%= banner.title %></strong><br/>
                                    <p><%= banner.description.html_safe %></p>
                                    Reservierung / Reservation: Phosaigon52 | ZÃ¼rcherstrasse 91, 8952 Schlieren<br/>
                                    <strong>Telefon:</strong> 043 495 00 22 <br> <strong>E-Mail:</strong> phosaigon52@gmail.com <br> <strong>Website:</strong> www.phosaigon52.ch<br/>
                                    "/>
                                    </li>
                                <% end %>
                            </ul>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </section>
    <!-- ABOUT STORY -->
</div>
<!-- END / PAGE WRAP -->

